{
  "coc.preferences.formatOnSaveFiletypes": [
    "elm",
    "javascript",
    "typescript",
    "typescriptreact", 
    "json",
    "fsharp",
    "html",
    "yaml",
    "yml"
  ],
  "coc.preferences.rootPatterns": [
    ".git", 
    "elm.json", 
    "package.json"
  ],
  "diagnostic.refreshOnInsertMode": true,
  "diagnostic.refreshAfterSave": false,
  "diagnostic.virtualText": true,
  "diagnostic.virtualTextPrefix": "~~> ",
  "codeLens.enable": true,
  "snippets.ultisnips.directories": [
    "/Users/stevenyap/Workspace/dotfiles/snippets"
  ],
  "typescript.updateImportsOnFileMove.enable": false,
  "javascript.updateImportsOnFileMove.enable": false,
  "yaml.format.enable": true,
  "tsserver.disableAutomaticTypeAcquisition": false,
  "languageserver": {
    "elmLS": {
      "command": "elm-language-server",
      "filetypes": [ "elm" ],
      "rootPatterns": [ "elm.json" ],
      "initializationOptions": {
        "elmPath": "elm",
        "elmFormatPath": "elm-format",
        "elmTestPath": "elm-test",
        "elmAnalyseTrigger": "change"
      }
    },
  },
}
